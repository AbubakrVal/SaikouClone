<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:SaikouClone.ViewModels"
             x:Class="SaikouClone.Homepage"
             Title="Saikou"
             BackgroundColor="#0F1115">
    
    <ContentPage.BindingContext>
        <viewmodel:HomeViewModel/>
    </ContentPage.BindingContext>
    
    
    <Grid RowDefinitions="Auto,*,Auto">
        
        
        <Grid Grid.Row="0" Padding="15,10" ColumnDefinitions="Auto,*,Auto">
            <Image Source="dotnet_bot.png" 
                   HeightRequest="30" 
                   Aspect="AspectFit"
                   HorizontalOptions="Start"/>
            
            <SearchBar Grid.Column="1" 
                       Placeholder="Search anime..."
                       Margin="10,0"/>
            
            <ImageButton Grid.Column="2" 
                         Source="dotnet_bot.png"
                         HeightRequest="30"
                         WidthRequest="30"/>
        </Grid>

        
        <ScrollView Grid.Row="1">
            <StackLayout>
                
                <Label Text="Featured" 
                       FontSize="Title"
                       FontAttributes="Bold"
                       TextColor="White"
                       Margin="10,0,0,10"/>
                
                <CarouselView HeightRequest="200">
                    <CarouselView.ItemTemplate>
                        <DataTemplate>
                            <Frame CornerRadius="10" Padding="0" Margin="10">
                                <Image Source="dotnet_bot.png"
                                       Aspect="AspectFill"/>
                            </Frame>
                        </DataTemplate>
                    </CarouselView.ItemTemplate>
                </CarouselView>
                
                
                <Label Text="Trending" 
                       FontSize="Title"
                       FontAttributes="Bold"
                       TextColor="White"
                       Margin="10,20,0,10"/>
                
                <FlexLayout Wrap="Wrap" JustifyContent="Start">
                    <BoxView WidthRequest="140" HeightRequest="200" Margin="5" CornerRadius="10" Color="#1C1D26"/>
                    <BoxView WidthRequest="140" HeightRequest="200" Margin="5" CornerRadius="10" Color="#1C1D26"/>
                    <BoxView WidthRequest="140" HeightRequest="200" Margin="5" CornerRadius="10" Color="#1C1D26"/>
                    <BoxView WidthRequest="140" HeightRequest="200" Margin="5" CornerRadius="10" Color="#1C1D26"/>
                    <BoxView WidthRequest="140" HeightRequest="200" Margin="5" CornerRadius="10" Color="#1C1D26"/>
                    <BoxView WidthRequest="140" HeightRequest="200" Margin="5" CornerRadius="10" Color="#1C1D26"/>
                </FlexLayout>
            </StackLayout>
        </ScrollView>

        
        <Grid Grid.Row="2" 
              BackgroundColor="#1C1D26"
              HeightRequest="60"
              ColumnDefinitions="*,*,*,*">
            <Button Grid.Column="0" Text="Home" TextColor="#FF5722"/>
            <Button Grid.Column="1" Text="Browse" TextColor="#8A8A8F"/>
            <Button Grid.Column="2" Text="Library" TextColor="#8A8A8F"/>
            <Button Grid.Column="3" Text="Settings" TextColor="#8A8A8F"/>
        </Grid>
    </Grid>
</ContentPage>